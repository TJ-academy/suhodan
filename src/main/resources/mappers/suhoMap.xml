<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="suhoMap">

  <resultMap id="SuhoMapResultMap" type="com.example.suhodan.suhomap.SuhoMapDTO">
    <result property="location" column="LOCATION"/>
    <result property="sido" column="SIDO"/>
    <result property="danger" column="DANGER"/>
    <result property="danger_class" column="CLASS"/>
  </resultMap>

  <select id="list_all" resultMap="SuhoMapResultMap">
    SELECT LOCATION, SIDO, DANGER, "CLASS" FROM suho_map
  </select>

  <select id="detail_sido" parameterType="string" resultMap="SuhoMapResultMap">
    SELECT LOCATION, SIDO, DANGER, "CLASS" FROM suho_map WHERE SIDO = #{sido}
  </select>

  <select id="detail_class" parameterType="string" resultMap="SuhoMapResultMap">
    SELECT LOCATION, SIDO, DANGER, "CLASS" FROM suho_map WHERE "CLASS" = #{danger_class}
  </select>

</mapper>