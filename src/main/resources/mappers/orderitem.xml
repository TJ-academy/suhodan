<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="orderitem">
	<select id="listByOrderId" resultType="com.example.suhodan.orders.OrderItemDTO">
